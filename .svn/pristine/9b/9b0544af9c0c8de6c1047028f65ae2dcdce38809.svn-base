.codebox{
  border-radius:16rpx;
  background:#fff;
  width:100%;
  padding:12rpx 62rpx 0;
  box-sizing:border-box;
  margin-top:36rpx;
  margin-bottom:94rpx;
}
.codebox input{
  font-size:28rpx;
}
.codebox text{
  font-size:28rpx;
  color:#485465;
  margin-top:34rpx;
  display:block;
  margin-bottom:30rpx;
}
.codebox>view{
  padding-bottom:30rpx;
}
