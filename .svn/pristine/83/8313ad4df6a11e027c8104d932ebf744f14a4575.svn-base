function http(url, data, callBack) {
    showLoad();
    wx.request({
        url: url,
        method: 'GET',
        data: data,
        header: {
            'content-type': 'application/json'
        },
        success: function (res) {
            var data = res.data;

            if (res.statusCode != 200) {
                hideLoad();
                return;
            }
            if (data.code == 200) {
                hideLoad();
                callBack(data);
            } else {
                hideLoad();
            }
        },
        fail: function (err) {
            hideLoad();
            showModel({title: '数据获取失败', content: '请检查网络后刷新！', showCancel: false});
        }
    })
}

function showLoad() {
    wx.showLoading({
        title: '加载中',
        mask: true
    })
}

function hideLoad() {
    wx.hideLoading();
}

function showToast() {
