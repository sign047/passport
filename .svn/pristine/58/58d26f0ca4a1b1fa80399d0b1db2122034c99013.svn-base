@import "../../template/form/form.wxss";
page{
  background:#f0f0f0;
}
.addport{
  padding-bottom:18rpx;
}
.saveBtn{
  background:#3b48ee;
  border-radius:20rpx;
  text-align:center;
  color:#fff;
  padding:26rpx 0;
  display:block;
  width:666rpx;
  margin:0 auto;
}
.tiptext{
  color:#3b48ee;
  font-size:22rpx;
  display:block;
  text-align:center;
  margin-bottom:60rpx;
  margin-top:6rpx;
}
.tabtit{
  color:#485465;
  font-size:30rpx;
  margin-bottom:44rpx;
  padding-left:14rpx;
  padding-top:30rpx;
}
.tab{
  display:block;
  color:#cfcfcf;
  border:1rpx solid #cfcfcf;
  padding:6rpx 0;
  width:120rpx;
  text-align:center;
  margin-bottom:30rpx;
  border-radius:4rpx;
}
.tab:nth-child(3n+2){
  margin:0 56rpx 30rpx;
}
.active{
  color:#3b48ed;
  border-color:#3b48ed;
}
.radio-item{
  padding:0 120rpx 0 104rpx;
}
.place{
  color:#c2c2c2 !important;
}