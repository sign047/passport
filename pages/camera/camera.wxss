@import "/template/welCropper/welCropper.wxss";
.camera-box{
  width:750rpx;
  height:100vh; 
  background:url('http://7xl2r0.com1.z0.glb.clouddn.com/camera.png') repeat-y;
  background-size:750rpx auto;
  position:relative;
}
.mask{
  background:rgba(0,0,0,.6);
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
}
.cover{
  width:100%;
  height:100%;
  display:block;
}
.cameta-txt{
  color:#fff;
  font-size:32rpx;
  line-height:44rpx;
  display:block;
  margin:160rpx 0 34rpx;
}
.take-photo{
  position:absolute;
  left:50%;
  transform: translate3d(-50%,0,0);
  bottom:105rpx;
  border-radius:50%;
 width:146rpx;
 height:146rpx;
 background:#fff;
}
.icon{
  width:60rpx;
  height:60rpx;

}
.Album{
   background:#fff; 
  position:absolute;
  left:90rpx;
  bottom:120rpx;
width:80rpx;
 height:80rpx;
 border-radius:8rpx;
 align-items: center;
}
.Album-text{
  font-size:20rpx;
  line-height:22rpx;
  position:absolute;
  bottom:0;
  left:50%;
  display:block;
  transform:translate3d(-50%,0,0);
  width:100%;
  color:#000;
  text-align:center;
} 
.Album-icon{
   width:45rpx;
   height:45rpx;
   margin-top:8rpx;
}