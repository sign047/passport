@import "../../template/form/form.wxss";
.tabtit{
  color:#485465;
  font-size:30rpx;
  margin-bottom:44rpx;
  padding-left:14rpx;
  padding-top:30rpx;
}
.tab{
  display:block;
  color:#cfcfcf;
  border:1rpx solid #cfcfcf;
  padding:6rpx 0;
  width:120rpx;
  text-align:center;
  margin-bottom:30rpx;
  border-radius:4rpx;
}
.tab:nth-child(3n+2){
  margin:0 56rpx 30rpx;
}
.active{
  color:#3b48ed;
  border-color:#3b48ed;
}
.radio-item{
  padding:0 120rpx 0 104rpx;
}
.saveBtn{
  position:absolute;
  left:50%;
  top:35%;
  transform:translate3d(-50%,0,0);
}