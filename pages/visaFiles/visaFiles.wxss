.picbox{
  margin-top:72rpx;
  width:640rpx;
  height:492rpx;
  position:relative;
  overflow: hidden;
}
.passport-pic{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  border-radius: 6rpx;
}
.load{
  position:fixed;
  height:100vh;
  width:750rpx;
  left:0;
  top:0;
  z-index:222;
  background:rgba(255,255,255,1);
  border-top:1rpx solid #f9f9f9;
}
.mode{
  position:absolute;
  left:50%;
  top:30%;
  transform: translate3d(-50%,0,0);
  /* width:220rpx; */
  /* height:220rpx; */
  padding:20rpx 51rpx;
  background:rgba(0,0,0,1);
  border-radius:10rpx;
}
.img{
  margin:20rpx auto 0;
  display:block;
  width:140rpx;
  height:140rpx;
  border-radius:50%;
}
