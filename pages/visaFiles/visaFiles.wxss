.visaFiles{

}
.navbox{
  border-bottom:1rpx solid #f4f4f4;
  padding:10rpx 0 14rpx;
}
.navbar{
  position:relative;
}
.navbar .txt{
   color:#999;
  font-size:28rpx;
  line-height:40rpx;

}
.navbar .round{
  color:#e3e3e3;
  font-size:24rpx;
  margin-left:60rpx;
  text-shadow: #485465;
}
.navbar.active .txt{
    color:#000;
}
.active ::after{
  content:'';
  position:absolute;
  left:12rpx;
  bottom:-14rpx;
  background:#000;
  width:88rpx;
  height:2rpx;
}
