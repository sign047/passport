/**app.wxss**/
.align{
   display:flex;
   flex-direction:column;
}
.flex{
   display:flex;
   justify-content:center;
   align-items:center;
  position:relative;
}

.flexbox{
    display:flex;
    align-items:center;
  position:relative;
}
.between{
    justify-content:space-between;
}
.box{
  flex:1;
}
.around{
    justify-content:space-around;
}

text{
  font-family:'PingFangSC-Regular', 'Helvetica Neue', 'Helvetica', 'STHeitiSC-Semibold', 'Arial', sans-serif;
}
.medium1{
  font-family:'PingFangSC-Medium', 'Helvetica Neue', 'Helvetica', 'STHeitiSC-Semibold', 'Arial', sans-serif;

}
.medium{
  font-family:'PingFangSC-Medium', 'Helvetica Neue', 'Helvetica', 'STHeitiSC-Semibold', 'Arial', sans-serif;

}
.regular{
  font-family:'PingFangSC-Regular', 'Helvetica Neue', 'Helvetica', 'STHeitiSC-Semibold', 'Arial', sans-serif;
}
.none{
  display:none;
}

.wrap{
  flex-wrap:wrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.vertical{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  position:relative;
}
.justify-normal{
  justify-content:flex-start;
}
.v-end{
  justify-content:flex-end;
}
.a-end{
  align-items:flex-end;
}
.align-normal{
  align-items:flex-start;
}
.btn{
  display:block;
  color:#fff;
  font-size:30rpx;
  width:666rpx;
  border-radius:10rpx;

  padding:26rpx 0;
  text-align:center;
  background:#000;
}
.red{
  color:#fc6180 !important;
}
.blue{
  color:#485465 !important;
}
.circle{
  display:block;
  width:44rpx;
  height:44rpx;
  margin-right:32rpx;

}
.end{
  align-items: flex-end;

}
.pic-confirm{
  width:314rpx;
  height:100rpx;
  border-radius:54rpx;
  color:#fff;
  line-height:100rpx;
  font-size:36rpx;
  text-align:center;
  background:#000;
  position:fixed;
  left:50%;
  bottom:44rpx;
  transform:translate3d(-50%,0,0);
}
.camera-icon{
  height:50rpx;
  width:50rpx;
  margin-right:10rpx;
}
.camerabox{
  background:rgba(0,0,0,.9);
  width:100%;
  position:absolute;
  bottom:0;
  height:84rpx;
  border-radius: 0 0 6rpx 6rpx;
  z-index:3;
}
.uploadR{
  color:#fff;
  font-size:32rpx;
  line-height: 44rpx;
}
.weui-toptips {
  position:fixed;
  -webkit-transform:translateZ(0);
  transform:translateZ(0);
  top:0;
  left:0;
  right:0;
  padding:5px;
  font-size:14px;
  text-align:center;
  color:#fff;
  z-index:5000;
  word-wrap:break-word;
  word-break:break-all;
}
.weui-toptips_warn {
  background-color:#e64340;
}
.btn-get-user-info{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  opacity:0;
  z-index:20;
}